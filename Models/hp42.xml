  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainGauche</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.00 </ind><dep>  5 </dep></entry>
      <entry><ind> 0.60 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.00 </ind><dep> -5 </dep></entry>
    </interpolation>
    <center>
      <x-m> -4.805 </x-m>
      <y-m> -1.104 </y-m>
      <z-m> -2.495 </z-m>
    </center>
